/* pages/accountStatement/accountStatement.wxss */

/* 导航栏区域 */

page{
  padding-bottom: 100rpx;
}

.nav-seach-bar {
  width: 130rpx;
}

.nav-seach-bar-box {
  position: absolute;
  top: 5rpx;
  right: 230rpx;
  background: #fff;
  height: 56rpx;
  width: 200rpx;
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav-seach-bar-box image {
  height: 32rpx;
  width: 32rpx;
}

/* 单据状态导航 区域 */

.statu-navbar-box {
  width: 100%;
}

.statu-navbar-box .item-box {
  width: 80%;
  padding: 0 10%;
  display: flex;
  justify-content: space-around;
  height: 88rpx;
  line-height: 88rpx;
  color: #3b3939;
  font-size: 30rpx;
  letter-spacing: 1rpx;
}

.statu-navbar-box .item-box .item {
}

.statu-navbar-box .item-box .selected {
  color: #ff5a00;
  border-bottom: 5rpx solid #ff5a00;
  font-weight: bold;
}

/* 未交款, 在线支付 */
.collect-statu-card {
  width: 100%;
  border-top: 4rpx solid #f5f5f5;
}

.collect-statu-card image{
    height: 100rpx;
    width: 100rpx;
    margin-right: 24rpx;
}
.collect-statu-card .shop {
  display: flex;
  align-items: center;
  padding: 18rpx 3%;
  width: 94%;
}
.collect-statu-card .shop .shop-info{
  flex: 1;
}
.collect-statu-card .shop .shop-info .adress{
  height: 40rpx;
  
  color: #181716;
}
.collect-statu-card .shop .shop-info .top{
  display: flex;
  justify-content: space-between;
  letter-spacing: 1rpx;
  height: 40rpx;
  position: relative;
}
.collect-statu-card .shop .shop-info .top .name{
  font-weight: 800;
}
.collect-statu-card .shop .shop-info .top image{
  position: absolute;
top: 10rpx;
right: 0;
height: 20rpx;
width: 20rpx;
margin: 0;
color: #808080;

}
.collect-statu-card .shop .shop-info .top .statu{
  color: #ff5a00;
  padding-right: 30rpx;
  font-size: 28rpx;
}

.order-info {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 18rpx 3%;
  width: 94%;
  border-top: 2rpx solid #f5f5f5;
}
.order-info .item {
  padding: 2rpx 0;
  width: 50%;
}
.order-info .item .label{
  font-size: 28rpx;
  color: #666666;
}


/* 已交款, 代收款 */

.received-info-box {
  width: 100%;
  border-top: 6rpx solid #f5f5f5;
  padding: 18rpx 0;
  position: relative;
}

.received-info-box .item {
  display: flex;
  padding: 2rpx 32rpx;
  align-items: center;
}

.received-info-box .item .label {
  font-size: 28rpx;
  font-family: PingFang SC-Medium, PingFang SC-Medium-SC-Medium;
  font-weight: SC-Medium;
  color: #666;
  width: 130rpx;
  white-space: nowrap;
}

.received-info-box .item .content {
}

/* 底部单据结算 */

.order-res-box {
  height: 100rpx;
  width: 100%;
  background: linear-gradient(to bottom right, #ff796d, #ff4e3e);
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 10%;
  width: 80%;
}

.received-info-box button {
  width: 160rpx;
  height: 46rpx;
  border-radius: 24rpx;
  position: absolute;
  right: 22rpx;
  top: 23rpx;
  font-size: 26rpx;
  font-weight: 100;
  padding: 0;
  line-height: 46rpx;
}

.order-res-box .all-order-info {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 30rpx;
}

.order-res-box .all-order-info .content {
  font-size: 33rpx;
}
