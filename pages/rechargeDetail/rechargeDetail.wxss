/* pages/rechargeDetail/rechargeDetail.wxss */
.title {
  font-size: 34rpx;
  padding: 5rpx 20rpx;
}
.content-box{
  width: 94%;
  padding: 15rpx 2%;
  position: relative;  
}
.sign {
  background-color: #ff6658;
  height: 50rpx;
  width: 14rpx;
  position: absolute;
  top: 5rpx;
  left: 0;
}
.top {
  display: inline-block;
  vertical-align: middle;
  margin-top: 20rpx;
}

/* 商品详情 */
.goods-card-box {
  padding: 20rpx 3%;
  width: 94%;display: flex;
  justify-content: flex-start;
  border-top: 5rpx solid #f6f6f6;
  border-bottom: 5rpx solid #f6f6f6;
  position: relative;
  transition: transform 1.5s .2s;
}
.goods-card-box .image-box image{
  height: 120rpx;
  width: 120rpx;
  background: url("data:image/jpg;base64,");
  background-size: 100%;
}
.goods-card-box .good-detail {
  width: 100%;
  font-size: 29rpx;
}

.good-detail .table-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.table-name {
  line-height: 29rpx;
  width: 58%;
}
.table-item .allPrice{
  color: #FF4E3E;
  width: 25%;
}
.table-item .num{
  color: #5C5C5C;
  width: 11%;
}


.print-order-box {
  height: 100vh;
  width: 100%;
  position: fixed;
  z-index: 9999;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.print-order {
  width: 570rpx;
  background-color: #fff;
  padding: 40rpx 32rpx 15rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.print-order .good-info{
  padding: 15rpx;
  border-radius: 15rpx;
}
.print-order .good-info .title{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 31rpx;
  padding: 0;
}

.detail-title{
  position: absolute;
  background: linear-gradient(to bottom right, #3BB0EC, #245EF7);
  color: #fff;
  padding: 15rpx 25rpx;
  top: -20rpx;
  right: -20rpx;
  border-radius: 0rpx 25rpx 0rpx 25rpx;
}