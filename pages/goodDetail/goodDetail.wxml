<!-- pages/goodDetail/goodDetail.wxml -->
<Navbar title='{{type == 1 ? "商品详情" : "编辑商品"}}' background='linear-gradient(to bottom right, rgb(241, 149, 139), #FF4E3E)' />
<view class="good-detail-container">
  <view class="input-box">
    <label>商品条码：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled="{{type == 1 ? true : false}}" 
      value='{{data.itemSubno}}'
      data-inputName="itemSubno"
    ></input>
  </view>
  <view class="input-box">
    <label>商品货号：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled="{{type == 1 ? true : false}}" 
      value='{{data.itemNo}}'
      data-inputName="itemNo"
    ></input>
  </view>
  <view class="input-box">
    <label>商品名称：</label>
    <input 
      class="good-name" 
      disabled="{{type == 1 ? true : false}}" 
      value='{{data.itemName}}'
      data-inputName="itemName"
    ></input>
  </view>
  <view class="input-box">
    <label>入驻商名称：</label>
    <input 
      bindinput='bindInputData' 
      disabled="{{type == 1 ? true : false}}" 
      value='{{data.supplierName}}'
      data-inputName="supplierName"
    ></input>
  </view>
  <view class="input-box">
    <label>入驻商编号：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled
      value='{{data.supplierNo}}'
      data-inputName="supplierNo"
    >
    </input>
  </view>
  <view class="input-box">
    <label>最后修改时间：</label>
    <input disabled value='{{data.modifyDate}}'>
    </input>
  </view>
  <!-- <view class="input-box">
    <label>供应商编号：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled="{{type == 1 ? true : false}}" 
      value='{{data.deliveryType}}'
      data-inputName="deliveryType"
    ></input>
  </view> -->
  <view class='good-props'>
    <view class="input-box">
      <label>进 货 价(￥)：</label>
      <input 
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.price}}'
        data-inputName="price"
      ></input>
    </view>
    <view class="input-box">
      <label>建议零售价(￥)：</label>
      <input 
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.salePrice}}'
        data-inputName="salePrice"
      ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box">
      <label>毛 利 率：</label>
      <input 
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.profit}}'
        data-inputName="profit"     
      ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box">
      <label>类别：</label>
      <input 
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.itemClsno}}'
        data-inputName="itemClsno"
     ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box">
      <label>单位：</label>
      <input 
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.unit}}'
        data-inputName="unit"
     ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box" wx:if="{{data.minSupplyQty}}">
      <label>单次起订：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.minSupplyQty}}'
        data-inputName="minSupplyQty"
      ></input>
    </view>
    <view class="input-box" wx:if="{{data.minSupplyQty}}">
      <label>单次限购：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.maxSupplyQty}}'
        data-inputName="maxSupplyQty"
      ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box">
      <label>配送规格：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.supplySpec}}'
        data-inputName="supplySpec"
      ></input>
    </view>
    <view class="input-box">
      <label>库存数量：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.stockQty}}'
        data-inputName="stockQty"
      ></input>
    </view>
  </view>

  <view class='good-pic'>
    <view class="input-box">
      <label>商品图片：</label>
      <view class="pic-box">
        <image src="{{data.picUrl}}"/>
      </view>
    </view>
  </view>
</view>

