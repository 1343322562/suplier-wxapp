<!-- pages/goodDetail/goodDetail.wxml -->
<Navbar title='{{type == 1 ? "商品详情" : "编辑商品"}}' background='linear-gradient(to bottom right, rgb(241, 149, 139), #FF4E3E)' />
<view class="good-detail-container">
  <view class="input-box" data-name='商品条码' data-inputName="itemSubno" bindtap="showEditDialogClick">
    <label>商品条码：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled
      value='{{data.itemSubno}}'
    ></input>
  </view>
  <view class="input-box" data-name='商品货号' data-inputName="itemNo" bindtap="showEditDialogClick">
    <label>商品货号：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled
      value='{{data.itemNo}}'
    ></input>
  </view>
  <view class="input-box" data-name='商品名称' data-inputName="itemName" bindtap="showEditDialogClick">
    <label>商品名称：</label>
    <input 
      class="good-name" 
      disabled
      value='{{data.itemName}}'
    ></input>
  </view>
  
  <view wx:if="{{data.appNote}}" class="input-box" data-name='商品日期'>
    <label>商品日期：</label>
    <input disabled="{{type == 1 ? true : false}}" value='{{data.appNote}}'>
    </input>
  </view>

  <view class="input-box" data-name='入驻商名称'>
    <label> 入驻商名称：</label>
    <input 
      bindinput='bindInputData' 
      disabled
      value='{{data.supplierName}}'
      data-inputName="supplierName"
    ></input>
  </view>
  <view class="input-box" data-name='入驻商编号' bindtap="showEditDialogClick" wx:if="{{data.supplierNo}}">
    <label> 入驻商编号：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled
      value='{{data.supplierNo}}'
      data-inputName="supplierNo"
    >
    </input>
  </view>
  <!-- <view class="input-box" bindtap="showEditDialogClick">
    <label> data-name=''供应商编号：</label>
    <input 
      type="number"
      bindinput='bindInputData' 
      disabled="{{type == 1 ? true : false}}" 
      value='{{data.deliveryType}}'
      data-inputName="deliveryType"
    ></input>
  </view> -->
  <view class='good-props'>
    <view class="input-box" data-inputName="price" data-name='进 货 价(￥)' bindtap="showEditDialogClick">
      <label id="edit-label">进 货 价(￥)：</label>
      <input 
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}"
        value='{{data.price}}'
      ></input>
    </view>
    <view class="input-box" data-inputName="salePrice" data-name='建议零售价(￥)' bindtap="showEditDialogClick">
      <label id="edit-label">建议零售价(￥)：</label>
      <input 
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.salePrice}}'
      ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box" data-name='毛 利 率'>
      <label>毛 利 率：</label>
      <input 
        bindinput='bindInputData' 
        disabled
        value='{{data.profit}}'
        data-inputName="profit"     
      ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box" data-inputName="itemClsno" data-name='类别'>
      <label>类别：</label>
      <input 
        bindinput='bindInputData' 
        disabled
        value='{{data.itemClsno}}'
     ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box" data-name='单位' data-inputName="unit" bindtap="showEditDialogClick">
      <label>单位：</label>
      <input 
        bindinput='bindInputData' 
        disabled
        value='{{data.unit}}'
     ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box" data-name='单次起订' data-inputName="minSupplyQty" bindtap="showEditDialogClick" wx:if="{{data.minSupplyQty}}">
      <label>单次起订：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled
        value='{{data.minSupplyQty}}'
      ></input>
    </view>
    <view class="input-box" data-name='单次限购' data-inputName="maxSupplyQty" bindtap="showEditDialogClick" wx:if="{{data.minSupplyQty}}">
      <label>单次限购：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled
        value='{{data.maxSupplyQty}}'
      ></input>
    </view>
  </view>
  <view class='good-props'>
    <view class="input-box" data-name='配送规格' data-inputName="supplySpec" bindtap="showEditDialogClick">
      <label>配送规格：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled
        value='{{data.supplySpec}}'
      ></input>
    </view>
    <view class="input-box" data-name='库存数量' data-inputName="stockQty" bindtap="showEditDialogClick">
      <label>库存数量：</label>
      <input 
        type="number"
        bindinput='bindInputData' 
        disabled="{{type == 1 ? true : false}}" 
        value='{{data.stockQty}}'
      ></input>
    </view>
  </view>

  <view class='good-pic'>
    <view class="input-box">
      <label>商品图片：</label>
      <view class="pic-box">
        <image src="{{data.picUrl}}"/>
      </view>
    </view>
  </view>
</view>

<!-- 修改商品信息 Dialog -->
<view class="print-order-box" wx:if="{{isShowEditDialog}}">
  <view class="print-order" >
    <view class="title">修改{{editDialogValueObj.name}}</view>
    <input
      value="{{editDialogValueObj.inputValue}}" 
      data-inputName="{{editDialogValueObj.inputName}}"
      bindinput="commitEditData"
      class="edit-dialog-input"
    />
    
    <view class="confirm-edit" bindtap="editConfirm">
			<button data-type="0" style="background:#fff;height: 90rpx;line-height:50rpx;text-align: center;font-size: 30rpx;color: #676767;font-weight:400;">取消</button>
			<button data-type="1" style="background:#fff;height: 90rpx;line-height:50rpx;text-align: center;font-size: 30rpx;color: #08B018;font-weight:400;">确认</button>
		</view>
  </view>
</view>

<!-- btn 区域 -->
<view bindtap="upOrDownClick">
  <button 
    data-status="1"
    wx:if="{{data.status == 0}}" 
    style="background: #ff7164;height: 80rpx;width: 600rpx;border-radius: 50rpx;font-weight: 400;font-size: 30rpx;line-height: 50rpx;letter-spacing: 4rpx;margin-top: 180rpx;" 
    type='primary'
  >
    上架</button>

  <button 
    data-status="0"
    wx:if="{{data.status == 1 && type == 1}}" 
    style="height: 80rpx;width: 600rpx;border-radius: 50rpx;font-weight: 400;font-size: 30rpx;line-height: 50rpx;letter-spacing: 4rpx;margin-top: 180rpx;" 
    type='primary'
  >
    下架
  </button>
</view>

<button 
    bindtap="editConfirmClick"
    data-status="0"
    wx:if="{{type == 0}}" 
    style="height: 80rpx;width: 600rpx;border-radius: 50rpx;font-weight: 400;font-size: 30rpx;line-height: 50rpx;letter-spacing: 4rpx;margin-top: 120rpx;" 
    type='primary'
  >
    确认编辑
  </button>

