/* pages/bankCarCommit/bankCarCommit.wxss */
.boss-register-container {
  min-height: 100vh;
  width: 100%;
  background-color: #f5f5f5;
}

.span-index {
  display: inline-block;
  color: #ff6472;
  margin-right: 5rpx;
  font-size: 32rpx;

}
.item {
  width: 100%;
  margin-top: 15rpx;
  padding: 20rpx 30rpx;
  background-color: #fff;
}

.item .title {
  display: flex;
  align-items: center;
  color: #333333;
}

.item .title .content{
  color: #999999;
  /* color: #ff8200; */
}

.item .images {
  width: 550rpx;
  margin: 30rpx 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.item .images .none{
  height: 171rpx;
  width: 280rpx;
  border-radius: 10rpx;
  border: 1rpx dashed #888888;
}


.item .images .add {
  height: 145rpx;
  width: 145rpx;
  padding: 15rpx;
  border: 1rpx solid #ff8200;
  border-radius: 10rpx;
}

.btn {
  height: 75rpx;
  text-align: center;
  font-size: 29rpx;
  line-height: 75rpx;
  margin: 50rpx auto;
  color: #fff;
  width: 500rpx;
  background: linear-gradient(to bottom right, rgb(255,183,0), rgb(255,130,0));
  border-radius: 40rpx;
}


.form{color: #333333;height: 115rpx;display: flex;padding: 0 30rpx;border-bottom: 2rpx solid #f2f2f2;position: relative;align-items: center;font-size: 31rpx;}
.form>.name{flex-grow: 1;line-height: 110rpx;flex: .6;color: #444444;}
.form>input{flex: 1;font-size: 32rpx;}

.span{
  font-size: 34rpx;
  margin: 0 auto;
  width: 100%;
  text-align: center;
  border-radius: 16rpx;
  color: #333333;
  font-weight: bold;
  background-color: #fff;
  padding: 30rpx 0 18rpx;
  
}

.bank-info{
  position: absolute;
  background-color: #ffffff;
  top: 85rpx;
  border-top-color: #fff;
  width: 400rpx;
  right: 66rpx;
  z-index: 10;
  border-radius: 6rpx;
  padding: 10rpx;
  height: 200rpx;
  overflow-y: scroll;
  box-shadow: 0 5rpx 25rpx #ff820050;
}
.bank-info .bank-item{
  padding: 12rpx 16rpx;
  font-size: 29rpx;
  border-bottom: 1rpx dashed #bbbbbb;
}