/* pages/bossRegister/readyRegister/readyRegister.wxss */
.container {
  width: 100%;
  padding: 0 5%;
}

.container .notice{
  width: 100%;
  margin-top: 50rpx;
  margin-bottom: 55rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #333333;
  letter-spacing: 1rpx;
}

.container .notice .content.c-2{
  font-size: 38rpx;
  margin-bottom: 6rpx;
  font-weight: bold;
}


.register-info-item {
  width: 100%;
  display: flex;
  min-height: 235rpx;
}

.register-info-item .left{
  flex: 1;
}

.register-info-item .left .title{
  display: flex;
  align-items: center;
}

.register-info-item .left .info{
  color: #999999;
  margin-top: 10rpx;
  width: 75%;
}


.register-info-item .left .title .index{
  color: rgb(255, 92, 84);
  margin-right: 10rpx;
  font-size: 35rpx;
  margin-top: -10rpx;
}

.register-info-item .right{
  width: 255rpx;
  height: 200rpx;
  padding-left: 25rpx;
  position: relative;
}

.register-info-item .right image{
  width: 240rpx;
  height: 150rpx;
}
.register-info-item .right .sign{
  position: absolute;
  color: #fff;
  background-color: rgb(51,137,236);
  top: 0;
  left: 25rpx;
  padding: 8rpx;
}

.btn {
  height: 75rpx;
  text-align: center;
  font-size: 29rpx;
  line-height: 75rpx;
  margin: 50rpx auto;
  color: #fff;
  width: 500rpx;
  background: linear-gradient(to bottom right, rgb(255,183,0), rgb(255,130,0));
  border-radius: 40rpx;
}
