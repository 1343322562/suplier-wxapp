<image wx:if="{{orderStatu == 1}}" bindtap="print" src="../../images/makeCarbtn.png" class="printBtn" /> -->
<button wx:if="{{supplyFlag == 1 || supplyFlag == 2}}" bindtap="print" style="height: 80rpx;width: 600rpx;border-radius: 50rpx;font-weight: 400;font-size: 30rpx;line-height: 50rpx;letter-spacing: 4rpx;margin-top: 160rpx;background: linear-gradient(to bottom right, #3BB0EC, #245EF7);" type='primary'>打印/拣货</button>

<button wx:if="{{supplyFlag == 3}}" bindtap="makeCar" style="height: 80rpx;width: 600rpx;border-radius: 50rpx;font-weight: 400;font-size: 30rpx;line-height: 50rpx;letter-spacing: 4rpx;margin-top: 160rpx;background: linear-gradient(to bottom right, #FFB910, #FF8200);" type='primary'>装车</button>



<!-- 选择司机 Dialog -->
<view class="print-order-box" wx:if="{{ supplyFlag == 3 && isShowEnterCarDialog}}">
  <view class="print-order" >
    <view class="title">请选择配送司机</view>
    <view bindtap="selectDriver">
      <view class="car-tag {{item.selected == 1 ? 'selecedD' : ''}}" wx:for="{{driverArr}}" wx:key="index" data-index="{{index}}">{{item.name}}</view>
    </view>
    

    <view class="print-confirm" bindtap="entetCarClick">
      <view class="cancle" data-type="0">取消</view>
      <view class="confirm" data-type="1" >确定</view>
  </view>
  </view>
</view>