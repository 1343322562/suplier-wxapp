.printBtn {
  height: 80rpx;
  width: 600rpx;
  margin: 150rpx auto;
  display: block;

}


.print-order-box {
  height: 100vh;
  width: 100%;
  position: fixed;
  z-index: 100;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.print-order {
  width: 570rpx;
  background-color: #fff;
  padding: 0rpx 32rpx 28rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: start;
  flex-direction: column;
  align-items: start;
}

.print-order .title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  color: #080808;
  height: 100rpx;
  line-height: 100rpx;
}

.car-tag {
  color: #BFBFBF;
  border: 1rpx solid #BFBFBF;
  padding: 10rpx 0; 
  width: 130rpx;
  font-size: 31rpx;
  text-align: center;
  border-radius: 6rpx;

}

.selecedD{
  color: #040404;
  border: 1rpx solid #040404;
}

.print-confirm {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin-top: 46rpx;
}
.print-confirm .cancle {
  border: 1rpx solid #cccccc;
  border-radius: 50rpx;
  width: 220rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  color: rgb(129, 129, 129);
}

.print-confirm .confirm {
  border: 1rpx solid #245FF7;
  border-radius: 50rpx;
  width: 220rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  color: #245FF7;
}