  justify-content: flex-end;
align-items: flex-end;
min-height: 130rpx;

} 
.custom-info-box .order-statu image{
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 16rpx;
} 

.custom-info-box .order-statu .statu{
  white-space: nowrap;

} 

