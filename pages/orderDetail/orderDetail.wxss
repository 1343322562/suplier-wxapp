/* pages/orderDetail/orderDetail.wxss */
page {
  padding-bottom: 100rpx;
}

.top-container {
  background: linear-gradient(to bottom right, rgb(241, 149, 139), #FF4E3E) ;
  font-size: 28rpx;
}
.navbar {
  position: absolute
}
.sale-data-table {
  padding: 25rpx 2%;
  width: 96%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx;
}
#title-name{
  flex: 1;
  text-align: start;
  padding-left: 30rpx;
}

.sale-data-table .item{
  width: 170rpx;
  text-align: center;
  font-size: 29rpx;
  color: #4d4d4d;
}

/* 头部区域 */
.custom-info-box {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 88%;
  padding: 10rpx 6% 34rpx;
  color: #fff;
  font-weight: 100;
} 

.custom-info-box .main-info{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.custom-info-box .main-info .item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  padding: 1rpx 0;
  color: #fff;
  letter-spacing: 1rpx;
}

.custom-info-box .main-info .item .name{
  font-size: 30rpx;
  padding-bottom: 2rpx;
  min-width: 90rpx;
  white-space: nowrap;
}
.custom-info-box .main-info .item .name~.content{
  font-size: 30rpx;
  padding-bottom: 2rpx;
}


.custom-info-box .main-info .item .adress{
  min-width: 90rpx;
}
/* .custom-info-box .main-info .item .copy-icon{
  
} */

.custom-info-box .main-info .item .time{
  
}

.custom-info-box .order-statu{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
align-items: flex-end;
min-height: 130rpx;

} 
.custom-info-box .order-statu image{
  height: 50rpx;
  width: 50rpx;
  margin-bottom: 16rpx;
} 

.custom-info-box .order-statu .statu{
  white-space: nowrap;
  padding-left: 12rpx;
} 

.tag{
  margin-left: 30rpx;
border: 1rpx solid #FF4E3E;
color: #FF4E3E;
font-size: 26rpx;
padding: 1rpx 10rpx;
border-radius: 6rpx;

}

.order-remarks {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 3%;
  width: 94%;
  border-bottom: 4rpx solid #f5f5f5;
  letter-spacing: 1rpx;
}

.order-remarks .item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #020202;
  font-size: 30rpx;
}

.order-remarks .item .label{
}

.order-remarks .item .content{
}

/* 商品详情 */
.goods-card-box {
  padding: 20rpx 3%;
  width: 94%;display: flex;
  justify-content: flex-start;
  border: 5rpx solid #f6f6f6;
  position: relative;
  transition: transform 1.5s .2s;
}

.goods-card-box .image-box{
}
.goods-card-box .image-box image{
  height: 120rpx;
  width: 120rpx;
  background: url("data:image/jpg;base64,");
  background-size: 100%;
}
.goods-card-box .good-detail {
  width: 100%;
  font-size: 29rpx;
}
.item{
}


.printBtn {
  height: 80rpx;
  width: 600rpx;
  margin: 150rpx auto;
  display: block;
}


.print-order-box {
  height: 100vh;
  width: 100%;
  position: fixed;
  z-index: 100;
  top: 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
}

.print-order {
  width: 570rpx;
  background-color: #fff;
  padding: 0rpx 32rpx 28rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: start;
  flex-direction: column;
  align-items: start;
}

.print-order .title {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  color: #080808;
  height: 100rpx;
  line-height: 100rpx;
}

.car-tag {
  color: #BFBFBF;
  border: 1rpx solid #BFBFBF;
  padding: 10rpx 0; 
  width: 130rpx;
  font-size: 31rpx;
  text-align: center;
  border-radius: 6rpx;

}

.selecedD{
  color: #040404;
  border: 1rpx solid #040404;
}

.print-confirm {
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin-top: 46rpx;
}
.print-confirm .cancle {
  border: 1rpx solid #cccccc;
  border-radius: 50rpx;
  width: 220rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  color: rgb(129, 129, 129);
}

.print-confirm .confirm {
  border: 1rpx solid #245FF7;
  border-radius: 50rpx;
  width: 220rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  color: #245FF7;
}

.good-detail .table-item{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.table-name {
  line-height: 29rpx;
  width: 58%;
}
.table-item .allPrice{
  color: #FF4E3E;
  width: 17%;
}
.table-item .num{
  color: #5C5C5C;
  width: 19%;
}
.detail-title{
  position: absolute;
  background: linear-gradient(to bottom right, #3BB0EC, #245EF7);
  color: #fff;
  padding: 15rpx 25rpx;
  top: -20rpx;
  right: -20rpx;
  border-radius: 0rpx 25rpx 0rpx 25rpx;
}
.addPrint {
  position: absolute;
  bottom: 40rpx;
  right: 60rpx;
  width: 105rpx;
  color: #fff;
  text-align: center;
  border-radius: 50%;
  width: 120rpx;
  padding: 15rpx 20rpx;
  background: linear-gradient(120deg, #FFB910, #FF8200);
}