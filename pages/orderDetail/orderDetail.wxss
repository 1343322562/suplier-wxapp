/* 头部区域 */
.custom-info-box {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  width: 88%;
  padding: 10rpx 6% 34rpx;
  color: #fff;
  font-weight: 100;
} 

.custom-info-box .main-info{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.custom-info-box .main-info .item{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  padding: 1rpx 0;
  color: #fff;
  letter-spacing: 1rpx;
}

.custom-info-box .main-info .item .name{
  font-size: 30rpx;
  padding-bottom: 2rpx;
  min-width: 90rpx;

}
.custom-info-box .main-info .item .name~.content{
  font-size: 30rpx;
  padding-bottom: 2rpx;
}


.custom-info-box .main-info .item .adress{
  min-width: 90rpx;
}
