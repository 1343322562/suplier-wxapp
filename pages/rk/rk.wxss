/* pages/rk/rk.wxss */
page {
  background-color: #f1f1f1;
}
.btn-box {width: 100%;display: flex;justify-content: space-around;align-items: center;position: fixed;bottom: 200rpx;}
.btn {    padding: 20rpx 0;color: #f6f6f6;border-radius: 100rpx;width: 265rpx;text-align: center;}
.cancel {background-color: rgb(180,180,180); }
.confirm {background:linear-gradient(to bottom right, rgb(241, 149, 139), #FF4E3E)}

.examine {margin-top: 35rpx;background: linear-gradient(to bottom right, rgb(241, 149, 139), #FF4E3E);color: #f6f6f6;height: 75rpx;line-height: 75rpx;width: 71%;text-align: center;border-radius: 75rpx;}
.print-order-box {height: 100vh;width: 100%;position: fixed;z-index: 100;top: 0;background-color: rgba(0, 0, 0, 0.4);display: flex;justify-content: center;align-items: center;}

.print-order {width: 570rpx;background-color: #fff;padding: 0rpx 32rpx 38rpx;box-sizing: border-box;display: flex;justify-content: center;flex-direction: column;align-items: center;border-radius: 20rpx;position: relative;}

.print-order .title {width: 100%;text-align: center;font-size: 33rpx;font-weight: bold;color: #080808;height: 100rpx;line-height: 100rpx;}
.print-order .close{font-size: 51rpx;color: #fff;border-radius: 50%;position: absolute;bottom: -50px;border: 1rpx solid #fff;width: 60rpx;height: 60rpx;text-align: center;line-height: 60rpx;}